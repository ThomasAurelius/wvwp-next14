    "mongoose": "^8.0.0",
    "next": "14.0.4",
    "next-auth": "^5.0.0-beta.3",
    "node-fetch": "^3.3.2",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.49.3",
    "react-toastify": "^10.0.4"
  },
  "devDependencies": {
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "@vitejs/plugin-react": "^4.0.4",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
